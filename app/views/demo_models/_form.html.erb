<%- model_class = DemoModel -%>

<%= simple_form_for @demo_model, wrapper: :horizontal_form, :html => { :class => 'form-horizontal' } do |f| %>

    <div class="row col-md-offset-1 col-md-5 bg-danger">
        <%= f.error_notification %>
    </div>

    <%= render('fields', f: f, demo_model: @demo_model, disabled: disabled)  %>

    <div class="row form-actions col-sm-6 col-md-6 col-lg-6">
      <%= link_to 'Back',:back, :class => 'btn btn-primary'  %>
      <% if !disabled %>
          <%= f.button :submit, :value => 'Save', :class => "btn btn-primary" %>
      <% else %>
          <%= link_to "Edit", edit_demo_model_path(@demo_model), :class => 'btn btn-small btn-primary' %>
      <% end %>
    </div>
<% end %>

