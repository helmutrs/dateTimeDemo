<div class="page-header col-sm-12">
  <div  class="container ">
    <div class="col-sm-3">
      <span class="lead text-info"><%=t '.title', :default => "Listing Demo Models" %></span>
    </div>
    <div class="col-sm-9">
    </div>
  </div>
</div>

<div class="container col-sm-12">
    <table id="course_table" class="table table-striped table-bordered table-condensed" >
      <thead>
        <tr>
          <th>Name</th>
          <th>Date field</th>
          <th>Datetime filed</th>
          <th>Time field</th>
          <th>Comment</th>
          <th colspan="3">Functions</th>
        </tr>
      </thead>

      <tbody>
        <% @demo_models.each do |demo_model| %>
          <tr>
            <td><%= demo_model.name %></td>
            <td><%= demo_model.date_field %></td>
            <td><%= demo_model.dateTime_field %></td>
            <td><%= demo_model.time_field %></td>
            <td><%= demo_model.comment %></td>
            <td><%= link_to 'Show', demo_model %></td>
            <td><%= link_to 'Edit', edit_demo_model_path(demo_model) %></td>
            <td><%= link_to 'Destroy', demo_model, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>


    <br>

    <%= link_to 'New Demo model', new_demo_model_path %>
</div>